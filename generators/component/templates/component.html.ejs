                  <input id="<%= f.name %>" type="text" class="p-inputtext-sm" pInputText [(ngModel)]="search['<%= f.name %>']" />
                  <%_ } _%>
                  <label for="<%= f.name %>"><%= f.header %> </label>
                  <i class="pi pi-times clear" (click)="search['<%= f.name %>'] = undefined; onSearch()"></i>
                </span>
              </div>
