                optionLabel="name"
                [autoDisplayFirst]="false"
                [filter]="true"
                class="p-inputtext-sm"
                [options]="<%= r.rlCamelPlural %>!"
                (onChange)="filterChanged()"
                [(ngModel)]="<%= r.name %>"
              ></p-dropdown>
