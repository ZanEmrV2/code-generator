import { Injectable } from '@angular/core';
import { HttpClient } from '@angular/common/http';
import { Observable } from 'rxjs';
import { environment } from '../../../../environment/environment';

import { <%= capEntityName %> } from '../model/<%= snakeEntityName %>.model';

@Injectable({ providedIn: 'root' })
export class <%= capEntityName %>Service {
  private resourceUrl: string = `/services/${environment.services.<%= parentFolder %>}/api/<%= resourcePath %>`;


  constructor(protected http: HttpClient) {}

  create(<%= camelEntityName %>: <%= capEntityName %>): Observable<any> {
    return this.http.post<any>(this.resourceUrl, <%= camelEntityName %>);
  }

  update(<%= camelEntityName %>: <%= capEntityName %>): Observable<any> {
    return this.http.put(`${this.resourceUrl}/${<%= camelEntityName %>.id}`, <%= camelEntityName %>);
  }

  find(id: number): Observable<any> {
    return this.http.get(`${this.resourceUrl}/${id}`);
  }

  get(params?: any): Observable<any> {
    return this.http.get(this.resourceUrl, { params: params });
  }

  delete(id: number): Observable<any> {
    return this.http.delete(`${this.resourceUrl}/${id}`);
  }

}
